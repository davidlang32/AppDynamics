<monitor>
    <name>PostfixEmailQueueDepthMonitor</name>
    <type>managed</type>
    <enabled>true</enabled>
    <description>Monitors the Postfix Email Queue Depth Monitor.
    </description>
    <monitor-configuration>
    </monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
	<execution-frequency-in-seconds>30</execution-frequency-in-seconds>
	<execution-timeout-in-seconds>30</execution-timeout-in-seconds>
        <name>Run</name>
        <type>executable</type>
        <task-arguments>
        </task-arguments>
        <executable-task>
            <type>file</type>
            <file os-type="linux">PostfixEmailQueueDepthMonitor.sh</file>
            <file os-type="windows">run.bat</file>
        </executable-task>
    </monitor-run-task>
</monitor>
